NODE_ENV=development

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/forum"
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/forum"

# Better Auth - Générer avec: npx better-auth@latest generate secret
BETTER_AUTH_SECRET="votre-secret-genere-ici"

# URL de l'application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
BETTER_AUTH_TRUSTED_ORIGINS="http://localhost:3000"

# OAuth Google (optionnel - pour l'authentification Google)
# Créer une application OAuth sur: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="votre-google-client-id"
GOOGLE_CLIENT_SECRET="votre-google-client-secret"

# OAuth GitHub (optionnel - pour l'authentification GitHub)
# Créer une OAuth App sur: https://github.com/settings/developers
GITHUB_CLIENT_ID="votre-github-client-id"
GITHUB_CLIENT_SECRET="votre-github-client-secret"

# Resend (optionnel - pour l'envoi d'emails)
# Créer un compte sur: https://resend.com/
RESEND_API_KEY="votre-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Vercel Blob (optionnel - pour le stockage d'images)
# Créer un store Blob sur: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN="votre-vercel-blob-token"
